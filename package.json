{
    "name": "spacegun",
    "version": "0.0.36-SNAPSHOT",
    "main": "index.js",
    "license": "MIT",
    "repository": "github:dvallin/spacegun",
    "scripts": {
        "develop": "LAYER=client webpack --mode development --watch",
        "build": "npm run build:server; npm run build:client; npm run build:standalone",
        "build:client": "LAYER=client webpack -p",
        "build:standalone": "LAYER=standalone webpack -p",
        "build:server": "LAYER=server webpack -p",
        "format": "prettier --config .prettierrc.yaml --write '{src,configs,test}/**/*.{ts,tsx,js,jsx,html}'",
        "format:check": "prettier --config .prettierrc.yaml --list-different '{src,configs,test}/**/*.{ts,tsx,js,jsx,html}'",
        "test": "tsc --noEmit -p test/tsconfig.test.json && jest --config=jest.conf.js --coverage",
        "test:watch": "jest --config=jest.conf.js --watch",
        "spg": "bin/spg",
        "spacegun": "bin/spacegun",
        "spacegun-server": "bin/spacegun-server"
    },
    "bin": {
        "spg": "bin/spg",
        "spacegun": "bin/spacegun",
        "spacegun-server": "bin/spacegun-server"
    },
    "dependencies": {
        "@kubernetes/client-node": "^0.7.1",
        "axios": "^0.18.0",
        "chalk": "^2.4.1",
        "command-line-args": "^5.0.2",
