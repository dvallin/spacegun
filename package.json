        "koa": "^2.5.2",
        "koa-body": "^4.0.4",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "koa-views": "^6.1.4",
        "lodash.clonedeep": "^4.5.0",
        "mkdirp": "^0.5.1",
        "moment": "^2.22.2",
        "ora": "^3.0.0",
        "pug": "^2.0.3",
        "rxjs": "^6.3.3",
        "simple-git": "^1.96.0",
        "websocket": "^1.0.28"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/command-line-args": "^5.0.0",
        "@types/cron": "^1.3.0",
        "@types/jest": "^23.1.1",
        "@types/js-yaml": "^3.11.2",
        "@types/koa": "^2.0.46",
        "@types/koa-router": "^7.0.31",
        "@types/koa-static": "^4.0.0",
        "@types/koa-views": "^2.0.3",
        "@types/lodash.clonedeep": "^4.5.4",
        "@types/mkdirp": "^0.5.2",
