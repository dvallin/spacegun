        "babel": "^6.23.0",
        "babel-jest": "^23.4.2",
        "babel-preset-env": "^1.7.0",
        "copy-webpack-plugin": "^4.5.2",
        "jest": "^23.5.0",
        "js-yaml": "^3.12.0",
        "prettier": "^1.15.3",
        "ts-jest": "^23.1.4",
        "typescript": "^3.0.3",
        "webpack": "^4.17.2",
        "webpack-bundle-analyzer": "^2.13.1",
